  <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:local="clr-namespace:blocktemplate.BlockTemplates"
                     x:Name="root" 
                     x:Class="blocktemplate.MainViewModel">
    
    <Style x:Key="TextBlockPlane" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="2,2,2,0"/>
    </Style>

    <Style x:Key="ComboBoxPlane" TargetType="ComboBox">
        <Setter Property="Margin" Value="2,0,2,0"/>
    </Style>

    <Style x:Key="TextBoxPlane" TargetType="TextBox">
        <Setter Property="Margin" Value="2,0,2,0"/>
        <Setter Property="Text" Value="0"/>
    </Style>
    
    
    <Style x:Key="TextBlockControlStatement" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="2,5,2,0"/>
    </Style>

    <Style x:Key="ComboBoxControlStatement" TargetType="ComboBox">
        <Setter Property="Margin" Value="2,1,2,0"/>
    </Style>

    <Style x:Key="TextBoxControlStatement" TargetType="TextBox">
        <Setter Property="Margin" Value="2,1,2,0"/>
        <Setter Property="Text" Value="0"/>
    </Style>

    <ControlTemplate x:Key="SetVariable" TargetType="Thumb" >
        <local:VariableFrame x:Name="Frame" >
